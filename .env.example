DATABASE_URL=postgres://postgres:postgres@localhost:5432/video_platform?sslmode=disable
JWT_SECRET=your-secret-key-change-in-production
PORT=8080

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# Storage Type: "minio" (local) or "gcs" (production)
STORAGE_TYPE=minio

# MinIO Configuration (for local development)
MINIO_ENDPOINT=localhost:9000
MINIO_PUBLIC_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=videos

# GCP Cloud Storage Configuration (for production with Heroku)
# Uncomment and set these when deploying to Heroku
# STORAGE_TYPE=gcs
# GCP_PROJECT_ID=your-gcp-project-id
# GCP_BUCKET_NAME=your-bucket-name
# GCP_CREDENTIALS=base64-encoded-service-account-json
